WindowManager:
    MainWindow:
    SecondWindow:
    ProteinWindow:

<MainWindow>:
    name: "main"
    sequence: sequence

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "Paste the sequence from the FASTA file.\nInclude the header. "

            TextInput:
                id: sequence
                multinline: False

        Button:
            text:"Submit"
            on_release:
                root.btn()
                app.root.current = "second"

<SecondWindow>:
    name: "second"

    GridLayout:
        cols:1
        size: root.width, root.height

        Label:
            text: "We will use Basic Local Alignment Search Tool (BLAST) to find out the identity of this protein.\nThe search might take a couple of minutes."


        Button:
            text: "I made an error, take me back."
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

        Button:
            text: "Let's do this!"
            on_release:
                app.root.current = "protein"
                root.blastsearch()
                root.manager.transition.direction = "left"

<ProteinWindow>:
    name: "protein"

    sequence_identity: sequence_identity

    GridLayout:
        cols:1
        size: root.width, root.height

        Label:
        Text: "Your was identified! Name of the species it came from is in []"

        Label:
            id: sequence_identity
            text: root.identity()
